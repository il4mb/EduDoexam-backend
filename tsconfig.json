{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitOverride": true,
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "src/controllers/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register", "ts-node/register"]
  }
}
